{
  "openapi": "3.0.0",
  "info": {
    "title": "广告管理系统 API",
    "version": "1.0.0",
    "description": "广告管理系统的后端 API 接口文档"
  },
  "servers": [
    {
      "url": "http://localhost:3030",
      "description": "开发服务器"
    }
  ],
  "tags": [
    {
      "name": "认证管理",
      "description": "用户认证、授权及密码管理"
    },
    {
      "name": "用户管理",
      "description": "用户的增删改查"
    },
    {
      "name": "广告内容管理",
      "description": "广告内容的增删改查"
    },
    {
      "name": "播放日志管理",
      "description": "播放日志的查询和删除"
    },
    {
      "name": "埋点管理",
      "description": "用户行为事件埋点"
    },
    {
      "name": "素材管理",
      "description": "上传和管理图片素材（Base64）"
    }
  ],
  "paths": {
    "/api/auth/code": {
      "post": {
        "summary": "请求邮箱验证码",
        "tags": ["认证管理"],
        "description": "向指定邮箱发送一个用于登录或注册的6位数字验证码。",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string",
                    "format": "email",
                    "description": "接收验证码的邮箱地址"
                  }
                },
                "required": ["email"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "请求成功，验证码已发送",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "code": { "type": "integer", "example": 0 },
                    "msg": { "type": "string", "example": "验证码已发送至您的邮箱，请注意查收。" }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/auth/login": {
      "post": {
        "summary": "邮箱验证码登录/注册",
        "tags": ["认证管理"],
        "description": "使用邮箱和验证码进行登录。如果邮箱不存在，将自动创建新用户。",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string",
                    "format": "email",
                    "description": "登录的邮箱地址"
                  },
                  "code": {
                    "type": "string",
                    "description": "收到的6位数字验证码"
                  }
                },
                "required": ["email", "code"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "登录成功",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "code": { "type": "integer", "example": 0 },
                    "msg": { "type": "string", "example": "登录成功" },
                    "data": {
                      "type": "object",
                      "properties": {
                        "token": {
                          "type": "string",
                          "description": "JWT Token"
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/auth/forgot-password": {
      "post": {
        "summary": "忘记密码 (请求验证码)",
        "tags": ["认证管理"],
        "description": "为已注册的邮箱发送一个用于重置密码的验证码。",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string",
                    "format": "email",
                    "description": "接收验证码的邮箱地址"
                  }
                },
                "required": ["email"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "请求成功",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "code": { "type": "integer", "example": 0 },
                    "msg": { "type": "string", "example": "如果该邮箱已注册，我们将发送一封密码重置邮件。" }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/auth/reset-password": {
      "post": {
        "summary": "重置密码",
        "tags": ["认证管理"],
        "description": "使用有效的验证码为指定邮箱设置新密码。",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string",
                    "format": "email"
                  },
                  "code": {
                    "type": "string",
                    "description": "收到的4位数字验证码"
                  },
                  "password": {
                    "type": "string",
                    "description": "要设置的新密码"
                  }
                },
                "required": ["email", "code", "password"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "密码重置成功",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "code": { "type": "integer", "example": 0 },
                    "msg": { "type": "string", "example": "密码重置成功" }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/auth/me": {
      "get": {
        "summary": "获取当前用户信息",
        "tags": ["认证管理"],
        "description": "获取当前已登录用户的信息，包括角色。",
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "200": { "description": "获取成功" },
          "401": { "description": "未认证" },
          "404": { "description": "用户在数据库中不存在" }
        }
      }
    },
    "/api/register": {
      "post": {
        "summary": "用户注册 (传统方式)",
        "tags": ["用户管理"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "username": {
                    "type": "string",
                    "description": "用户名"
                  },
                  "password": {
                    "type": "string",
                    "description": "密码"
                  }
                },
                "required": ["username", "password"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "注册成功",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "code": {
                      "type": "integer",
                      "example": 0
                    },
                    "msg": {
                      "type": "string",
                      "example": "注册成功"
                    }
                  }
                }
              }
            }
          },
          "202": { "description": "审核任务已启动" },
          "401": { "description": "未认证" },
          "403": { "description": "没有管理员权限" },
          "404": { "description": "素材不存在" },
          "500": { "description": "AI服务调用失败" }
        }
      }
    },
    "/api/login": {
      "post": {
        "summary": "用户登录 (传统方式)",
        "tags": ["用户管理"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "username": {
                    "type": "string",
                    "description": "用户名"
                  },
                  "password": {
                    "type": "string",
                    "description": "密码"
                  }
                },
                "required": ["username", "password"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "登录成功",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "code": {
                      "type": "integer",
                      "example": 0
                    },
                    "msg": {
                      "type": "string",
                      "example": "登录成功"
                    },
                    "data": {
                      "type": "object",
                      "properties": {
                        "token": {
                          "type": "string",
                          "description": "JWT Token"
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/logout": {
      "post": {
        "summary": "用户登出",
        "tags": ["用户管理"],
        "description": "用户登出。客户端在调用此接口后应立即销毁本地存储的JWT Token。",
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "200": {
            "description": "登出成功",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "code": { "type": "integer", "example": 0 },
                    "msg": { "type": "string", "example": "登出成功" }
                  }
                }
              }
            }
          },
          "401": {
            "description": "认证失败，未提供或Token无效"
          }
        }
      }
    },
    "/api/users": {
      "get": {
        "summary": "获取所有用户",
        "tags": ["用户管理"],
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "200": {
            "description": "成功获取用户列表"
          }
        }
      },
      "post": {
        "summary": "添加新用户",
        "tags": ["用户管理"],
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "username": { "type": "string" },
                  "password": { "type": "string" },
                  "phone": { "type": "string" },
                  "email": { "type": "string" }
                },
                "required": ["username", "password", "phone", "email"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "添加成功"
          }
        }
      }
    },
    "/api/users/{id}": {
      "put": {
        "summary": "更新用户信息",
        "tags": ["用户管理"],
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "integer" }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "username": { "type": "string" },
                  "password": { "type": "string" },
                  "phone": { "type": "string" },
                  "email": { "type": "string" }
                },
                "required": ["username", "password"]
              }
            }
          }
        },
        "responses": {
          "200": { "description": "更新成功" }
        }
      },
      "delete": {
        "summary": "删除用户",
        "tags": ["用户管理"],
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "integer" }
          }
        ],
        "responses": {
          "200": { "description": "删除成功" }
        }
      }
    },
    "/api/users/{id}/role": {
      "put": {
        "summary": "更新用户角色 (管理员)",
        "tags": [
          "用户管理"
        ],
        "description": "更新指定用户的角色。此接口仅限管理员访问。",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "role": {
                    "type": "string",
                    "enum": [
                      "advertisers",
                      "admin"
                    ],
                    "description": "新的角色"
                  }
                },
                "required": [
                  "role"
                ]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "更新成功"
          },
          "400": {
            "description": "请求参数错误（无效的角色）"
          },
          "403": {
            "description": "没有管理员权限"
          },
          "404": {
            "description": "用户不存在"
          }
        }
      }
    },
